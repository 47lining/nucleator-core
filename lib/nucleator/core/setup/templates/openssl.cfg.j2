# OpenSSL Configuration file (to avoid prompting)

[ req ]
 default_bits           = 1024
 distinguished_name     = req_distinguished_name
 attributes             = req_attributes
 prompt                 = no
 output_password        = {{ pkcs12_bundle_password }}
 dirstring_type			= nobmp

 [ req_distinguished_name ]
 countryName                    = US
 organizationalUnitName         = {{ customer_domain }}
 commonName                     = *.{{ cage_name }}.{{ customer_domain }}

